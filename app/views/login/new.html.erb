<h1>Login</h1>

<%= form_tag login_path do %>
  <div>
    <%= label_tag :email, t('labels.user.email') %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password, t('labels.user.password') %>
    <%= password_field_tag :password %>
    <%= link_to t('forget_password'), request_password_new_path %>
  </div>
  <div>
    <%= submit_tag t('helpers.submit.login'), class: 'button' %>
  </div>
<% end %>
